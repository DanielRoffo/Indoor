<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="?attr/colorOnBackground"
        android:padding="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Set your device"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="20sp"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_margin="5dp"
            android:text="To activate your indoor system you must enter the code located on the back of the device. The same code can be entered by more than one user."/>

        <EditText
            android:id="@+id/device_code"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Enter your code"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAcceptDialog"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="48dp"
                android:background="@drawable/ic_buttom"
                android:text="Accept"
                android:textColor="@color/white"
                android:layout_marginEnd="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCancelDialog"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="48dp"
                android:background="@drawable/ic_buttom"

                android:text="Cancel"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>